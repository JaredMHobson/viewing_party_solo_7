<h1><%= @movie.title %></h1>

<%= button_to 'Discover Page', user_discover_index_path(@user), method: :get %>
<%= button_to "Create Viewing Party for #{@movie.title}", new_user_movie_viewing_party_path(@user, @movie.id), method: :get %>

<div id="movie_info">
  <ul>
    <li>Vote: <%= @movie.vote_average.round(2) %></li>
    <li>Runtime: <%= @movie.runtime_converted %></li>
    <li>Genre: <%= @movie.genres_names %></li>
  </ul>

  <h3>Summary</h3>
  <p><%= @movie.summary %></p>

  <div id="cast">
    <h3>Cast</h3>
    <ul>
      <% @movie.top_ten_cast.each do |member| %>
        <li>Name: <%= member[:name] %></li>
        <li>Character: <%= member[:character] %></li>
      <% end %>
    </ul>
  </div>

  <div id="reviews">
    <h3><%= @movie.review_count %></h3>
    <ul>
      <% @movie.reviews.each do |review| %>
        <li>Author: <%= review[:author] %></li>
        <li>Review: <%= review[:content] %></li>
      <% end %>
    </ul>
  </div>
</div>
