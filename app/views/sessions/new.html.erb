<section class="login_form">
  <%= form_with url: login_path, method: :post do |f| %>
    <%= f.label :email, 'Email: ' %>
    <%= f.email_field :email %>
    <%= f.label :password, 'Password: ' %>
    <%= f.password_field :password %>

    <%= f.label :location, 'Location: ' %>
    <%= f.text_field :location, value: cookies[:location] %>

    <%= f.submit 'Log In' %>
  <% end %>
</section>
