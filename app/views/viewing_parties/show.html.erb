<h1><%= @movie.title %> Viewing Party</h1>

<section id="buy_movie">
  <h3>Buy:</h3>
  <% @movie.buy.each do |service| %>
    <%= image_tag("https://image.tmdb.org/t/p/w200#{service[:logo_path]}", width: "50px") %>
  <% end %>
</section>

<section id="rent_movie">
  <h3>Rent:</h3>
  <% @movie.rent.each do |service| %>
    <%= image_tag("https://image.tmdb.org/t/p/w200#{service[:logo_path]}", width: "50px") %>
  <% end %>
</section>
<p>Buy/Rent data provided by JustWatch</p>